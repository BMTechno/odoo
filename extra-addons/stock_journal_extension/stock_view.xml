<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>
		<record model='ir.ui.view' id='stock_journal_sequence_form_view'>
			<field name='name'>Stock Journal Form Inherit</field>
			<field name='model'>stock.journal</field>
			<field name='inherit_id' ref='stock.view_stock_journal_form'/>
			<field name='type'>form</field>
			<field name='arch' type='xml'>
				<xpath expr="/form/field[@name='user_id']" position="after">
					<field name="sequence_id"/>
					<field name="warehouse_id"/>
					<field name="carrier_id"/>
					<separator string="User Access" colspan="4"/>
					<field name="user_ids" colspan="4" nolabel="1"/>
				</xpath>
			</field>
		</record>

		<record model='ir.ui.view' id='stock_journal_picking_form_view'>
			<field name='name'>Stock Journal Picking Form Inherit</field>
			<field name='model'>stock.picking</field>
			<field name='inherit_id' ref='stock.view_picking_out_form'/>
			<field name='type'>form</field>
			<field name='arch' type='xml'>
				<xpath expr="/form/group/group/field[@name='stock_journal_id']" position="replace">
					<field name="stock_journal_id" on_change="onchange_journal(stock_journal_id,type)" groups="base.group_extended" widget="selection"/>
				</xpath>
			</field>
		</record>

		<record model='ir.ui.view' id='stock_picking_in_journal_search_view'>
			<field name='name'>Stock Picking IN Search Inherit Journal</field>
			<field name='model'>stock.picking</field>
			<field name='inherit_id' ref='stock.view_picking_in_search'/>
			<field name='type'>search</field>
			<field name='arch' type='xml'>
				<xpath expr="/search/group/field[@name='name']" position="before">
					<filter name="my_journal" icon="terp-personal" string="My Pickings" domain="[('stock_journal_id.user_ids', 'in', [uid])]"/>
					<separator orientation="vertical"/>
				</xpath>
			</field>
		</record>
		<record model='ir.ui.view' id='stock_picking_internal_journal_search_view'>
			<field name='name'>Stock Picking Internal Search Inherit Journal</field>
			<field name='model'>stock.picking</field>
			<field name='inherit_id' ref='stock.view_picking_internal_search'/>
			<field name='type'>search</field>
			<field name='arch' type='xml'>
				<xpath expr="/search/group/field[@name='name']" position="before">
					<filter name="my_journal" icon="terp-personal" string="My Pickings" domain="[('stock_journal_id.user_ids', 'in', [uid])]"/>
					<separator orientation="vertical"/>
				</xpath>
			</field>
		</record>
		<record model='ir.ui.view' id='stock_picking_filter_journal_search_view'>
			<field name='name'>Stock Picking List Select Inherit Journal</field>
			<field name='model'>stock.picking</field>
			<field name='inherit_id' ref='stock.view_stock_picking_filter'/>
			<field name='type'>search</field>
			<field name='arch' type='xml'>
				<xpath expr="/search/group/field[@name='name']" position="before">
					<filter name="my_journal" icon="terp-personal" string="My Pickings" domain="[('stock_journal_id.user_ids', 'in', [uid])]"/>
					<separator orientation="vertical"/>
				</xpath>
			</field>
		</record>
		<record model='ir.ui.view' id='stock_picking_out_journal_search_view'>
			<field name='name'>Stock Picking OUT Search Inherit Journal</field>
			<field name='model'>stock.picking</field>
			<field name='inherit_id' ref='stock.view_picking_out_search'/>
			<field name='type'>search</field>
			<field name='arch' type='xml'>
				<xpath expr="/search/group/field[@name='name']" position="before">
					<filter name="my_journal" icon="terp-personal" string="My Pickings" domain="[('stock_journal_id.user_ids', 'in', [uid])]"/>
					<separator orientation="vertical"/>
				</xpath>
			</field>
		</record>
	</data>
</openerp>
