<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>

    <!--   Pos Receipt -->

	<record id="view_pos_picking" model="ir.ui.view">
		      <field name="name">Picking</field>
		      <field name="model">pos.picking</field>
		      <field name="type">form</field>
		      <field name="arch" type="xml">
		        <form string="Picking :">
            <separator string="Print the picking of the pos order" colspan="4"/>
		          <button icon='gtk-cancel' special="cancel"
		                  string="Cancel" />
		          <button name="print_report" string="Print Picking"
		                  colspan="1" type="object" icon="gtk-print" />
		        </form>
		      </field>
    	</record>


      <record id="pos_picking_action" model="ir.actions.act_window">
            <field name="name">Picking Print</field>
            <field name="res_model">pos.picking</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
             <field name="target">new</field>
        </record>

    <act_window id="act_window_pos_picking"
            name="Print Picking"
            src_model="pos.order"
            res_model="pos.picking"
            view_mode="form"
            key2="client_action_multi"
            target="new"
        />

</data>
</openerp>
