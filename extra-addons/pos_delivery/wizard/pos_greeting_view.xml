<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>

    <!--   Pos Greeting -->

		<record id="view_pos_greeting" model="ir.ui.view">
		      <field name="name">Greeting</field>
		      <field name="model">pos.greeting</field>
		      <field name="type">form</field>
		      <field name="arch" type="xml">
		        <form string="Greeting :">
            <separator string="Print the greeting of the pos order" colspan="4"/>
		          <button icon='gtk-cancel' special="cancel"
		                  string="Cancel" />
		          <button name="print_report" string="Print Greeting"
		                  colspan="1" type="object" icon="gtk-print" />
		        </form>
		      </field>
    	</record>


      <record id="pos_greeting_action" model="ir.actions.act_window">
            <field name="name">Greeting Print</field>
            <field name="res_model">pos.greeting</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
             <field name="target">new</field>
        </record>

    <act_window id="act_window_pos_greeting"
            name="Print Greeting"
            src_model="pos.order"
            res_model="pos.greeting"
            view_mode="form"
            key2="client_action_multi"
            target="new"
        />

</data>
</openerp>
