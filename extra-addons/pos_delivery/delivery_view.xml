<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>
		<record model='ir.ui.view' id='view_delivery_route_line_tree'>
			<field name='name'>Delivery Route Line Tree</field>
			<field name='model'>delivery.route.line</field>
			<field name='inherit_id' ref='delivery_routes.view_delivery_route_line_tree'/>
			<field name='type'>tree</field>
			<field name='arch' type='xml'>
				<xpath expr="/tree/field[@name='picking_id']" position="after">
					<field name="pos_order_id"/>
				</xpath>
			</field>
		</record>
		<record model='ir.ui.view' id='view_delivery_route_line_form'>
			<field name='name'>Delivery Route Line Form</field>
			<field name='model'>delivery.route.line</field>
			<field name='inherit_id' ref='delivery_routes.view_delivery_route_line_form'/>
			<field name='type'>form</field>
			<field name='arch' type='xml'>
				<xpath expr="/form/field[@name='picking_id']" position="after">
					<field name="pos_order_id"/>
				</xpath>
			</field>
		</record>
	</data>
</openerp>
